#!/usr/bin/make -f
# Copyright (C) 1997-1999 Joey Hess <joeyh@debian.org>
# Copyright (C) 2004-2007 Guillem Jover <guillem@debian.org>

include /usr/share/quilt/quilt.make

clean: unpatch
	dh_testdir
	dh_testroot
	
	$(MAKE) clean
	rm -f VGABIOS-*.bin
	
	dh_clean

build-indep: patch
	dh_testdir
	
	$(MAKE)

build-arch:
# Nothing to do.

build: build-indep build-arch

install: build-indep
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	
	for i in "" .debug .cirrus .cirrus.debug ; do \
		install -m644 $(CURDIR)/VGABIOS-lgpl-latest$$i.bin \
		debian/vgabios/usr/share/vgabios/vgabios$$i.bin ; \
	done

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs ChangeLog
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:
# Nothing to do.

binary: binary-indep binary-arch

.PHONY: build build-indep build-arch
.PHONY: clean binary-indep binary-arch binary install

